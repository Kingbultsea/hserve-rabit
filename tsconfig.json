{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "inlineSourceMap": true,
    "typeRoots": [
      "./src/@types"
    ],
    "rootDirs": ["."],
    "outDir":"./dist",
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "watch": true
  },
  "include": [
    "./src/*.ts",
    "src/@types/*.ts"
  ],
  "exclude": [
    // "./dist/**/*.*"
  ]
}
